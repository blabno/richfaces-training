<?xml version='1.0' encoding='UTF-8'?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd" version="2.1">

    <application>
        <locale-config>
            <supported-locale>en</supported-locale>
            <supported-locale>de</supported-locale>
            <supported-locale>pl</supported-locale>
        </locale-config>
    </application>

    <converter>
        <converter-for-class>pl.itcrowd.tutorials.richfaces.domain.Ensemble</converter-for-class>
        <converter-class>pl.itcrowd.tutorials.richfaces.view.EnsembleConverter</converter-class>
    </converter>

    <converter>
        <converter-for-class>pl.itcrowd.tutorials.richfaces.domain.Artist</converter-for-class>
        <converter-class>pl.itcrowd.tutorials.richfaces.view.ArtistConverter</converter-class>
    </converter>

</faces-config>